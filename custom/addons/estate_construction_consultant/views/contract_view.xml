<odoo>
<data>    

    <record id="contract_view_tree" model="ir.ui.view">
        <field name="name">contract_tree</field>
        <field name="model">contract</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="party_id"/>
                <field name="contact_name"/>
                <field name="contact_number"/>
                <field name="contact_type"/>
                <field name="email"/>
                <field name="engineer_signature"/>
            </list>
        </field>
    </record>
    
    <record id="contract_action" model="ir.actions.act_window">
        <field name="name">Contracts</field>
        <field name="res_model">contract</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="contract_menu_list"
        name="List"
        parent="menu_contract"
        action="contract_action"
        sequence="10"/>    

</data>

</odoo>
